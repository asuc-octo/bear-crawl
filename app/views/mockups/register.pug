extends login.pug
block content
	h1(style='padding:50px;font-size:25px;text-align:center;color:white;font-weight:340;') Register for an account
	#container(style='overflow:hidden;position:static;width:100%;height:100%;display:flex;flex-direction:row;justify-content:center;')
		#circle(style='width:100px;position:absolute;margin:0 auto;height:100px;border-radius:50%;background-color:rgb(33,123,244);top:95px;box-shadow: -2px 6px 65px -20px rgba(0,0,0,0.75);')
			i.fa.fa-users(aria-hidden="true" style='position:absolute;font-size:60px;margin-top:20px;margin-left:20px;')
		#contained(style="background-color:white;width:333px;height:350px;position:static;border-radius:20px;box-shadow: 10px 10px 26px 0px rgba(0,0,0,0.75);")
			#group(style="height:20%;")
			input(name='Username', type='text', style="font-family:inherit;color:black;font-size:14px;width:85%;border:0;outline:0;background:transparent;" placeholder="Email")
			i.fa.fa-envelope-open(aria-hidden='true' style='font-size:20px;color:gray;')
			hr(style='width:90%;background-color:black;border-width:0.4px!important;')
			br
			input(name='Username', type='text', style="font-family:inherit;color:black;font-size:14px;width:85%;border:0;outline:0;background:transparent;" placeholder="Username")
			i.fa.fa-user(aria-hidden="true" style='font-size:20px;color:gray;')
			hr(style='width:90%;background-color:black;border-width:0.4px;')
			br
			input(name='Username', type='text', style="font-family:inherit;color:black;font-size:14px;width:85%;border:0;outline:0;background:transparent;" placeholder="Password")
			i.fa.fa-lock(aria-hidden="true" style='font-size:20px;color:gray;')
			hr(style='width:90%;background-color:black;border-width:0.4px;')
			#signin(style='display:flex;flex-direction:row;justify-content:center;')
				input.register(name='Sign in' type='submit' value='     Sign in     ' style='border:0;background:rgb(245,165,26);color:white;height:40px;width:175px;font-size:20px;border-radius:5px;box-shadow: -2px 6px 65px -20px rgba(0,0,0,2);margin-top:10px;')
			#forgot(style='display:flex;flex-direction:row;justify-content:left;')
				a(href='/forgot' style="margin-top:35px;background-color:none;text-align:left;color:darkgray;text-decoration:none;margin-left:25px;margin-right:90px;font-size:14px;") Forgot Password?
				#register(style='display:flex;flex-direction:row;justify-content:right;')
					a(href='' style="margin-top:35px;background-color:none;text-align:left;color:darkgray;text-decoration:none;margin-right:40px;font-size:14px;") Register
	



	
