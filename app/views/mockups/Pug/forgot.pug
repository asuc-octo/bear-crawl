html
	head
		title= title
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
		link(rel='stylesheet' href='/css/style.css')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Exo')
		script(src="/bower_components/jquery/dist/jquery.js")
		script(src='/js/script.js')
	body(style='margin:0;background-color:rgb(19,55,87);font-family:Exo')
		h1(style='padding:50px;font-size:25px;text-align:center;color:white;font-weight:340;') Reset Your Password
		#container(style='position:static;width:100%;height:100%;display:flex;flex-direction:row;justify-content:center;')
			#contained(style="background-color:white;width:333px;height:330px;position:static;border-radius:20px;box-shadow: 10px 10px 26px 0px rgba(0,0,0,0.75);")
				p(style='text-align:center;color:darkgray;margin-top:40px;') Enter your registered email address to receive a password reset code. 
				form(method='', action='' style="font-size:16px;text-align:center;")
					#group(style="height:20%;")
						hr(style='width:90%;background-color:black;border-width:0.4px!important;opacity:0;')
						input(name='Username', type='text', style="margin-top:25px;font-family:inherit;color:black;font-size:14px;width:85%;border:0;outline:0;background:transparent;" placeholder="Email Address")
						i.fa.fa-envelope-open(aria-hidden='true' style='font-size:20px;color:gray;')
						hr(style='width:90%;background-color:black;border-width:0.4px!important;')
						#signin(style='display:flex;flex-direction:row;justify-content:center;')
							input(name='Sign in' type='submit' value='    Reset Password    ' style='border:0;background:rgb(245,165,26);color:white;height:40px;width:175px;font-size:20px;border-radius:5px;box-shadow: -2px 6px 65px -20px rgba(0,0,0,2);margin-top:30px;')
						#forgot(style='display:flex;flex-direction:row;justify-content:center;margin-top:10px;')
							p(style='position:absolute;color:darkgray;font-size:10px;') Don't have an account?
							a(href='' style="position:absolute;margin-top:35px;background-color:none;text-align:center;color:darkgray;text-decoration:none;font-size:14px;") Register

									

		

	
