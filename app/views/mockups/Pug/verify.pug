html
	head
		title= title
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
		link(rel='stylesheet' href='/css/style.css')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Exo')
		script(src="/bower_components/jquery/dist/jquery.js")
		script(src='/js/script.js')
	body(style='margin:0;background-color:rgb(19,55,87);font-family:Exo')
		h1(style='padding:50px;font-size:25px;text-align:center;color:white;font-weight:340;') Please verify your account
		#container(style='position:static;width:100%;height:100%;display:flex;flex-direction:row;justify-content:center;')
			#contained(style="background-color:white;width:333px;height:330px;position:static;border-radius:20px;box-shadow: 10px 10px 26px 0px rgba(0,0,0,0.75);")
				p(style='text-align:center;color:darkgray;margin-top:60px;') Enter your password verification code. 
				form(method='', action='' style="font-size:16px;text-align:center;")
					#group(style="height:20%;")
						hr(style='width:90%;background-color:black;border-width:0.4px!important;opacity:0;')
						input(name='Username', type='text', style="margin-top:25px;font-family:inherit;color:black;font-size:14px;width:85%;border-style:solid;border-color:darkgray;border-radius:5px;height:30px;" placeholder="Verification Code")
						#resend(style='display:flex;flex-direction:row;justify-content:center;margin-top:25px;')
							input(name='Sign in' type='submit' value='Resend' style='border:0;background:rgb(245,165,26);color:white;height:40px;width:75px;font-size:18px;border-radius:5px;box-shadow: -2px 6px 65px -20px rgba(0,0,0,2);margin-top:30px;margin-right:30px;')
							#ok(style='display:flex;flex-direction:row;justify-content:center;')
								input(name='Sign in' type='submit' value='OK' style='border:0;background:rgb(245,165,26);color:white;height:40px;width:60px;font-size:18px;border-radius:5px;box-shadow: -2px 6px 65px -20px rgba(0,0,0,2);margin-top:30px;margin-left:30px;')
							
									

		

	
